<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/widget_container"
    android:layout_height="70dp"
    android:layout_width="270dp"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="5dp"
    android:layout_margin="5dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardElevation="5dp"
    android:background="?attr/colorSurface"
    android:padding="10dp">

        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/widget_icon_description"
            android:src="@drawable/flexipdf_widget_icon"
            android:layout_gravity="top"
            android:background="@color/black"
            />

        <TextView
            android:id="@+id/widget_standard_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:padding="5dp"
            android:text="@string/widget_title"
            android:textSize="11sp"
            android:textStyle="italic|bold"
            android:layout_gravity="start|top"
            />

        <TextView
            android:id="@+id/different_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="@string/widget_message"
            android:textSize="11sp"
            android:textStyle="italic|bold" />

</FrameLayout>