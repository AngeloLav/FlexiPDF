<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FlexiPDF" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryVariant">@color/mild_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_red</item>
<!--        <item name="colorSecondaryVariant">@color/my_dark_secondary_variant</item>-->
<!--        <item name="colorOnSecondary">@color/my_dark_on_secondary</item>-->
        <item name="selectableItemBackground">@android:color/transparent</item>

        <item name="android:statusBarColor">@color/mild_red</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowBackground">@color/dark_themed_2</item>
        <item name="colorSurface">@color/dark_themed</item>
        <!--<item name="colorOnError">@color/my_dark_on_error</item>-->

        <!-- ***** ATTRIBUTI CRUCIALI PER LA CONTEXTUAL ACTION BAR (CAB) ***** -->
        <!-- Questo fa sì che la CAB si disegni come un overlay a tutta larghezza sopra l'Activity -->
        <item name="android:windowActionModeOverlay">true</item>
        <!-- Assicura che non ci sia un'ombra indesiderata sotto la CAB se è un overlay -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Imposta il colore di sfondo della CAB. Usa un colore forte per il debug della larghezza. -->
        <item name="actionModeBackground">@android:color/holo_red_dark</item>
        <!-- ******************************************************************** -->

    </style>
    <style name="Widget.App.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@android:color/holo_red_dark</item>
    </style>
</resources>